<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-2">
        <%= link_to image_tag('http://www.icondig.com/data/icons/nounproject/512/330.png', :width => "50px", :height =>
        "50px"), votes_path(:post_id => @post.id), remote: true, method: :post, :class => 'vote-post' %>
        <p class="display-vote-count"><%= pluralize(@post.votes.count, 'Vote') %></p>
    </div>
    <div class="col-md-6">
        <% if @post.image_file_name != nil %>
          <a href="<%=@post.image.url%>"><%= image_tag @post.image.url(:medium) %></a>
        <% end %>
        <% if @post.link %>
          <a href="<%=@post.link%>" target="_blank">View Link</a>
        <%end%>
        <p><%=@post.description%></p>
    </div>
    <div class="col-md-2 post-info">
        <% if @post.user_id %>
          <% user = User.find(@post.user_id) %>
        <%end%>
        <p>Posted by: <%=user.name%></p>
        <%formatted_date = @post.created_at.strftime('%b %d %Y at %H:%M')%>
        <p><%=formatted_date%></p>

        <% if @can_edit %>
          <%= link_to "Edit Post", edit_wall_post_path(@wall, @post) %><br/>
          <%= link_to 'Delete Post', wall_post_path(@wall, @post), :confirm => 'Are you sure?', :method => :delete %>
        <%end%>
    </div>
    <div class="col-md-1"></div>
</div>
<br/>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5">
      <h3>Comments</h3>

      <% @comments.each do |comment| %>
        <p><%=comment.description%></p>
        <% user = User.find(comment.user_id) %>
        <p>By <%=user.name%></p>

        <% if comment.user_id == current_user.id %>
          <%= link_to "Edit Comment", edit_wall_post_comment_path(@wall, @post, comment) %> | <%= link_to 'Delete Comment', wall_post_comment_path(@wall, @post, comment), :confirm => 'Are you sure?', :method => :delete %>
        <%end%>
        <hr/>
      <%end%>

      <%= @comment.errors[:description].join("<br>") if @comment.errors[:description] %>
      <%= render 'layouts/errors' if flash[:errors] %>
      <%= form_for [@wall, @post, @comment] do |f| %>
        <div class="form-group">
          <%= f.label :comment %><br/>
          <%= f.text_area :description, :cols => "60", :rows => "3" %><br/>
        </div>
        <%= f.submit "Post Comment", :class => 'btn btn-success' %>
      <% end %>
      <br/><br/>

    </div>
</div>












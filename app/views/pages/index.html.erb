  <% if user_signed_in? %>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <h2>FB Posts</h2>
        <% @fblinks.each do |fblink| %>
          <div class="row">
            <div class="col-md-3"><p><%= image_tag(fblink.picture_url) if fblink.picture_url %></p></div>
            <div class="col-md-1"></div>
            <div class="col-md-8">
              <p><%= link_to fblink.name, fblink.url %></p>
              <p><%= fblink.caption %></p>
              <p><%= fblink.message %></p>
              <img src="http://graph.facebook.com/<%=fblink.sender_id%>/picture" height="35" /> &nbsp; Posted by <%= link_to fblink.sender_name, "http://facebook.com/"+ fblink.sender_id %>
            </div>
          </div>
          <hr/>
        <% end %>
      <h2> Posts </h2>
      <% @posts.each do |post| %>
          <p><%= post.description %></p>
      <% end %>
    </div>
  </div>
  <%else%>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="jumbotron">
       <h1>Welcome to Browntown Reddit</h1>
       <p>You wanna seee this shit - sign up or sign in</p>
       <p>
         <a class="btn btn-lg btn-primary" href="/auth/login" role="button">Sign In</a> <a class="btn btn-lg btn-success" href="/auth/register/sign_up" role="button">Sign Up</a>
         <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
       </p>
     </div>
   </div>
   <div class="col-md-1"></div>
 </div>
 <%end%>
